<div class="flex justify-between items-center sticky top-0 z-50 w-full bg-white shadow-sm p-4">
  <h1 class="text-2xl font-bold text-blue-800 hover:text-blue-500">
    <%= link_to 'Surplus Stock', root_path %>
  </h1>
  <div class="flex justify-center items-center space-x-4">
    <% if user_signed_in? %>
      <p>
        <%= link_to basket_path do %>
          <i class="fa-solid fa-cart-shopping fa-lg text-blue-800 hover:text-blue-500"></i>
        <% end %>
      </p>
      <div class="relative">
        <!-- Dropdown Button -->
        <button 
          id="menu-button" 
          class="flex items-center px-4 py-2 rounded focus:outline-none text-blue-800">
          <i class="fa-solid fa-bars fa-lg hover:text-blue-500"></i>
        </button>

        <!-- Dropdown Menu -->
        <div 
          id="menu-dropdown" 
          class="absolute right-0 mt-2 w-48 bg-white rounded shadow-lg z-10 hidden">
          <p class="block px-4 py-2 text-gray-800 hover:bg-gray-100">
            My account
          </p>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'block w-full text-left px-4 py-2 text-gray-800 hover:bg-gray-100' %>
        </div>
      </div>
    <% else %>
      <p>
        <%= link_to 'Sign in', new_user_session_path, class: 'btn-primary' %>
        <%# or %>
        <%#= link_to 'Sign up', new_user_registration_path, class: 'btn-primary' %>
      </p>
    <%  end %>
  </div>
</div>
