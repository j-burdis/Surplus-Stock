<div class="w-full lg:w-2/3">
  <%= link_to order_path(order) do %>
    <div class="bg-slate-50 p-2 my-2 drop-shadow flex flex-col md:flex-row w-full">
      <div class="mr-4">
        <p><strong>Order ID:</strong> <%= order.id %></p>
        <p><strong>Order Date:</strong> <%= order.created_at.strftime('%d %B %Y') %></p>
        <p>
          <strong>Delivery date: </strong> 
          <% if order.delivery_date.present? %>
            <%= order.delivery_date.strftime('%d %B %Y') %>
          <% else %>
            Not specified
          <% end %>
        </p>
        <p>
          <strong>Postcode:</strong>
          <% if order.display_postcode.present? %>
            <%= order.display_postcode %>
          <% else %>
            Not specified
          <% end %>
        </p>
      </div>
      <div>
        <p><strong>Status:</strong> <%= order.status.titleize %></p>
        <p><strong>Total Amount:</strong> £<%= order.total_amount %> (delivery fee inc.)</p>
        <p><strong>Summary:</strong></p>
        <ul>
          <% order.order_items.each do |item| %>
            <li>
              <%= item.quantity %> x <%= item.item.name %> (£<%= item.price %> each)
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
