<div class="p-4">
  <h1 class="font-bold text-4xl">My basket</h1>
  <% if @basket_items.any? %>
    <div data-controller="basket">
      <% @basket_items.each do |basket_item| %>
        <p>
          <%= basket_item.item.name %>: 
          <%= form_with(model: basket_item, method: :patch) do |form| %>
            <%= form.number_field :quantity, min: 1, max: basket_item.item.stock, value: basket_item.quantity, class: 'quantity-input', data: { action: "input->basket#validateQuantity" } %>
            <%= form.submit "Update Quantity" %>
          <% end %>
          x Â£<%= basket_item.item.price %>
        </p>
        <%= button_to 'Remove from basket', basket_item_path(basket_item), method: :delete, data: { confirm: 'Are you sure you want to remove this item from your basket?' } %>
      <% end %>
    </div>
  <% else %>
    <p>Your basket is empty</p>
  <% end %>
</div>
