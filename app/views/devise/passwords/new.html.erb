<div class="p-4 max-w-md mx-auto my-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center text-darkBlue mb-6">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification class: "bg-red-100 text-red-700 p-4 rounded-lg mb-4" %>

    <div class="space-y-4">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-lighterBlue" } %>
    </div>

    <div class="mt-4">
      <%= f.button :submit, "Send me reset password instructions", class: "btn-primary w-full" %>
      <p class="mt-4 text-center">or</p>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>