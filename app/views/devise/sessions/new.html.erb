<div class="p-4 max-w-md mx-auto my-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center text-darkBlue mb-6">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-lighterBlue" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-lighterBlue" } %>
      <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "flex items-center space-x-2" } if devise_mapping.rememberable? %>
      <div class="flex justify-between text-sm text-secondaryText">
      <p>Guest login: <strong>user@user.com</strong></p>
      <p>Guest password: <strong>password</strong></p>
      </div>
    </div>

    <div class="mt-4">
      <%= f.button :submit, "Log in", class: "btn-primary w-full" %>
      <p class="mt-4 text-center">or</p>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>